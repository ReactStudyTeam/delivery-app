{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
	"overrides": [
		{
			"env": {
				"node": true
			},
			"files": [".eslintrc.{js,cjs,jsx}"],
			"parserOptions": {
				"sourceType": "script"
			}
		},
		{
			"files": ["*.js", "*.jsx"],
			"rules": {
				"no-console": "warn",
				"no-alert": "warn"
			}
		}
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"import/extensions": ["off"],
		"semi": ["error", "always"],
		"camelcase": "off",
		"no-unused-vars": "off",
		"react/react-in-jsx-scope": "off"
	}
}
